@model List<PrimerMvc.Models.Item>;
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Crear" class="btn btn-success">Añadir Nuevo Item</a>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="background-color: #2196F3; color: white;">Nombre</th>
                <th scope="col" style="background-color: #2196F3; color: white;">Categoría</th>
                <th scope="col" class="text-center" style="background-color: #2196F3; color: white;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="background-color: #e3f2fd;">@item.Name</td>
                    <td style="background-color: #e3f2fd;">@item.Category?.Name</td>
                    <td class="text-center" style="background-color: #e8f5e9;">
                        <a asp-action="Modificar" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
